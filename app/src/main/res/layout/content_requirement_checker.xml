<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jmclaughlin6572.roadtrippin.RequirementChecker"
    tools:showIn="@layout/activity_requirement_checker">

    <Button
        android:id="@+id/messageIntent"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="implicitIntent1"
        android:text="Implicit Intent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="implicitIntent2"
        android:text="Implicit Intent" />

    <Button
        android:id="@+id/btnDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messageIntent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Download Image" />

    <ImageView
        android:id="@+id/downloadedImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/btnDownload"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />
</RelativeLayout>
